auth-timeout = 240
idle-timeout = 1200
mobile-idle-timeout = 1800
min-reauth-time = 300
max-ban-score = 80
ban-reset-time = 300
cookie-timeout = 300
deny-roaming = false
rekey-time = 172800
rekey-method = ssl
use-occtl = true
pid-file = /run/ocserv.pid
device = vpns
predictable-ips = true
default-domain = 158.160.3.198.nip.io
ipv4-network = 10.10.11.0
ipv4-netmask = 255.255.255.0
ipv6-network = fda9:4efe:7e3b:03ea::/48 
tunnel-all-dns = true
dns = 8.8.8.8
dns = 1.1.1.1
ping-leases = false
cisco-client-compat = true
dtls-legacy = true


sudo systemctl restart ocserv

sudo ocpasswd -c /etc/ocserv/ocpasswd rebrain
RebrainMe
echo "net.ipv4.ip_forward = 1" | sudo tee /etc/sysctl.d/60-custom.conf
echo "net.core.default_qdisc=fq" | sudo tee -a /etc/sysctl.d/60-custom.conf
echo "net.ipv4.tcp_congestion_control=bbr" | sudo tee -a /etc/sysctl.d/60-custom.conf
sudo sysctl -p /etc/sysctl.d/60-custom.conf


vi /etc/ufw/before.rules
****************************
# NAT table rules
*nat
:POSTROUTING ACCEPT [0:0]
-A POSTROUTING -s 10.10.11.0/24 -o eth0 -j MASQUERADE

# allow forwarding for trusted network
-A ufw-before-forward -s 10.10.11.0/24 -j ACCEPT
-A ufw-before-forward -d 10.10.11.0/24 -j ACCEPT
*********************************
sudo ufw enable
sudo systemctl restart ufw
sudo ufw allow 443/tcp
sudo ufw allow 443/udp


